<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.calitracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calitracker">
        <activity
            android:name=".View.exercises"
            android:exported="false" />
        <activity
            android:name=".View.SignUpEnd"
            android:exported="false" />
        <activity
            android:name=".View.SignUpPushNotifications"
            android:exported="false" />
        <activity
            android:name=".View.SignUpSelectMetric"
            android:exported="false" />
        <activity
            android:name=".View.SignUpSelectGender"
            android:exported="false" />
        <activity
            android:name=".View.EmailVerification"
            android:exported="false" />
        <activity
            android:name=".View.LogIn"
            android:exported="false" />
        <activity
            android:name=".View.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".View.Sign_Up"
            android:exported="false" />
        <activity
            android:name=".View.LoginScreen"
            android:exported="false"
            android:theme="@style/loginScreenTheme" />
        <activity
            android:name=".View.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".Controller.PushNotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"></action>
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>